<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/material_yellow_700</item>
    </style>

    <style name="YellowTheme" parent="FirebaseUI">
        <!-- Required for sign-in flow styling -->
        <item name="colorPrimary">@color/material_yellow_500</item>
        <item name="colorPrimaryDark">@color/material_yellow_700</item>
        <item name="colorAccent">@color/material_purple_a700</item>

        <item name="colorControlNormal">@color/material_yellow_500</item>
        <item name="colorControlActivated">@color/material_lime_a700</item>
        <item name="colorControlHighlight">@color/material_yellow_a200</item>
        <item name="android:windowBackground">@drawable/login_bg</item>
    </style>

    <style name="DialogTheme" parent="AlertDialog.AppCompat">
        <item name="android:windowBackground">@color/material_yellow_700</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:listViewStyle">@style/Widget.AppCompat.ListView</item>
        <item name="android:textColor">@color/colorBackground</item>
        <item name="android:textColorSecondary">@color/colorBackground</item>
        <item name="android:textColorHighlight">?attr/colorPrimary</item>
    </style>

    <style name="DialogFragmentTheme" parent="AppTheme">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowFullscreen">false</item>
    </style>

</resources>
